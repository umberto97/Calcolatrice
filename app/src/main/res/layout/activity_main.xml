<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:id="@+id/div"
            app:layout_constraintStart_toEndOf="@+id/mol"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent" android:text=":"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/ris"/>
    <Button
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:id="@+id/mol"
            app:layout_constraintStart_toEndOf="@+id/diff"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/div"
            android:text="x" android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/ris"/>
    <Button
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:id="@+id/diff"
            app:layout_constraintStart_toEndOf="@+id/somma"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/mol" android:text="-"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/ris"/>
    <EditText
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|number|numberDecimal"
            android:ems="10"
            android:id="@+id/n1"
            android:hint="N1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/n2"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <EditText
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|number|numberDecimal"
            android:ems="10"
            android:id="@+id/n2"
            android:hint="N2"
            app:layout_constraintStart_toEndOf="@+id/n1" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="Risultato"
            android:layout_width="72dp"
            android:layout_height="37dp"
            android:id="@+id/ris"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/n2"/>
    <Button
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:id="@+id/somma"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/diff" android:text="+"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/ris"/>
    <TextView
            android:text="Operando1:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textView3" android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Operando2:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Risultato:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" app:layout_constraintEnd_toStartOf="@+id/ris" android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@+id/ris"/>
</android.support.constraint.ConstraintLayout>